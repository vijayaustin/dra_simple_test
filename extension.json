        {
            "name": "CRITICAL_TESTCASES",
            "type": "Text",
            "required": "false",
            "default_value": " ",
            "label_key": "CRITICAL_TESTCASES_KEY",
            "desc_key": "CRITICAL_TESTCASES_DESC"
        },
        {
            "name": "SERVICE_LIST",
            "type": "Text",
            "required": "false",
            "default_value": "",
            "label_key": "SERVICE_LIST_KEY",
            "desc_key": "SERVICE_LIST_DESC"
        },
		{
            "name": "ATTEMPT_MAX",
            "type": "Text",
            "required": "false",
            "default_value": "0",
            "label_key": "ATTEMPT_MAX_KEY",
            "desc_key": "ATTEMPT_MAX_DESC"
        },
        {
            "name": "COMMAND",
            "type": "TextArea",
            "required": "true",
            "default_value" : "#!/bin/bash",
            "label_key": "COMMAND_KEY",
            "desc_key": "COMMAND_DESC"
        }
    ],
    "outputs": [
		{
            "type": "Artifacts",
            "inclusion" : "always"
        }
	],
    "execution": {
        "type": "JenkinsDocker",
        "shell": "#!/bin/bash

set +x
set +e 

export CF_APP=#APPLICATION_NAME#
export DRA_PROJECT_KEY=#PROJECT_KEY#

export DRA_TEST_TOOL_SELECT=#TEST_TOOL_SELECT#
export DRA_TEST_LOG_FILE=#TEST_LOG_FILE#
export DRA_MINIMUM_SUCCESS_RATE=#MINIMUM_SUCCESS_RATE#
export DRA_CHECK_TEST_REGRESSION=#CHECK_TEST_REGRESSION#
export DRA_COVERAGE_TOOL_SELECT=#COVERAGE_TOOL_SELECT#
export DRA_COVERAGE_LOG_FILE=#COVERAGE_LOG_FILE#
export DRA_MINIMUM_COVERAGE_RATE=\"#MINIMUM_COVERAGE_RATE#\"
export DRA_CHECK_COVERAGE_REGRESSION=#CHECK_COVERAGE_REGRESSION#
export DRA_COVERAGE_REGRESSION_THRESHOLD=#COVERAGE_REGRESSION_THRESHOLD#
export DRA_CRITICAL_TESTCASES=\"#CRITICAL_TESTCASES#\"

export DRA_SERVICE_LIST=\"#SERVICE_LIST#\"
export DRA_ATTEMPT_MAX=#ATTEMPT_MAX#
        
#check for defined host/port, if null set defaults
if [ -z \"$HOST\" ]; then
    export HOST=ondemand.saucelabs.com
fi
        
if [ -z \"$PORT\" ]; then
    export PORT=80
fi

function custom_cmd {
    eval #COMMAND#
    RESULT=$?

    if [ $RESULT -ne 0 ]; then
        exit 1
    fi
}
    
export -f custom_cmd

. $EXT_DIR/execute.sh
RESULT=$?
        
if [ $RESULT -ne 0 ]; then
    exit 1
fi

custom_cmd

    "},
    "project": "https://hub.jazz.net/project/alchemy/Alchemy-Ostanes",
